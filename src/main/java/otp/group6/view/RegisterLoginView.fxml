<ScrollPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="otp.group6.view.RegisterLoginController">
   <content>
      <AnchorPane>
         <children>
            <Pane pickOnBounds="false" prefHeight="312.0" prefWidth="350.0">
