                        <RowConstraints maxHeight="155.0" minHeight="10.0" prefHeight="45.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="157.0" text="Username" GridPane.rowIndex="1">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <TextField fx:id="username" onAction="#loginUser" onKeyTyped="#pwReminder" GridPane.columnIndex="1" GridPane.rowIndex="1">
